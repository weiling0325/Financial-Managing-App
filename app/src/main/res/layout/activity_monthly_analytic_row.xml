<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="10dp"
    app:cardElevation="50dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    app:cardCornerRadius="40dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutTransport"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/analyticItemsImageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/analyticItemsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Transport"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/progress_ratio_transport"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/status"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/status_image_transport"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/itemPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ThisMonth"
                android:textColor="#000"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/analyticItemsImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:src="@drawable/transport" />

        <TextView
            android:id="@+id/analyticsItemAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultStatusvalue"
            android:layout_toEndOf="@id/linearLayout"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>